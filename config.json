{
  "settings": {
    "Project": {
      "description": "Project where the commands are going to be applied.",
      "valueType": "passThrough",
      "values": [],
      "defaultValue": ""
    },
    "Configuration": {
      "description": "Configuration (Debug or Release)",
        "valueType": "property",
        "values": ["Release", "Debug"],
        "defaultValue": "Debug"
    }
  },
  "commands": {
    "build": {
      "alias": {
        "Release": {
            "description": "Build the Release configuration.",
            "settings": {
                "Configuration": "Release"
            }
        },
        "Debug": {
          "description": "Build the Debug configuration.",
            "settings": {
                "Configuration": "Debug"
            }
        }
      },
      "defaultValues": {
        "toolName": "msbuild",
        "settings": {}
      }
    }
  },
  "tools": {
    "terminal": {
      "osSpecific": {
        "windows": {
          "filesExtension": "cmd"
        },
        "unix": {
          "filesExtension": "sh"
        }
      },
      "valueTypes": {}
    },
    "msbuild": {
      "osSpecific": {
        "windows": {
          "defaultParameters": "/nologo /verbosity:minimal /clp:Summary /maxcpucount /nodeReuse:false",
          "path": "Tools/msbuild.cmd"
        },
        "unix": {
          "defaultParameters": "/nologo /verbosity:minimal /clp:Summary /maxcpucount",
          "path": "Tools/msbuild.sh"
        }
      },
      "valueTypes": {
        "property": "/p:{name}={value}",
        "target": "/t:{name}",
        "internal": "/{name}"
      }
    }
  }
}
